{
  "version": 2,
  "analytics": {
    "enable": true
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*).md",
      "destination": "/404.html"
    },
    {
      "source": "/(.*).json",
      "destination": "/404.html"
    },
    {
      "source": "/package.json",
      "destination": "/404.html"
    },
    {
      "source": "/vercel.json",
      "destination": "/404.html"
    },
    {
      "source": "/.github/(.*)",
      "destination": "/404.html"
    },
    {
      "source": "/CLAUDE.md",
      "destination": "/404.html"
    },
    {
      "source": "/README.md",
      "destination": "/404.html"
    },
    {
      "source": "/SETUP_GUIDE.md",
      "destination": "/404.html"
    }
  ],
  "public": false
}